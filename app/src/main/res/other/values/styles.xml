<resources>

  <style name="AppTheme" parent="@style/Light.AppThemeColors">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">?attr/colorBackgroundPage</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
  </style>

  <style name="DarkTheme" parent="@style/DayNight.AppThemeColors">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">?attr/colorBackgroundPage</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    <item name="android:navigationBarColor">?attr/colorBackgroundPage</item>
  </style>

  <style name="DarkThemeGray" parent="@style/DayNightGray.AppThemeColors">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">?attr/colorBackgroundPage</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    <item name="android:navigationBarColor">?attr/colorBackgroundPage</item>
  </style>

  <style name="AppTheme.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="chipTextTheme" parent="TextAppearance.MaterialComponents.Chip">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

</resources>