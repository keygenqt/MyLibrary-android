<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/FragmentSplash">

  <fragment
      android:id="@+id/FragmentSplash"
      android:name="com.keygenqt.mylibrary.ui.other.FragmentSplash"
      tools:layout="@layout/fragment_splash">
    <action
        android:id="@+id/action_FragmentSplash_to_FragmentBooks"
        app:destination="@id/FragmentBooks" />
    <action
        android:id="@+id/action_FragmentSplash_to_FragmentChat"
        app:destination="@id/FragmentChat" />
  </fragment>

  <fragment
      android:id="@+id/FragmentBooks"
      android:name="com.keygenqt.mylibrary.ui.books.FragmentBooks"
      tools:layout="@layout/common_fragment_list">
    <action
        android:id="@+id/action_FragmentBooks_to_FragmentSettings"
        app:destination="@id/FragmentSettings" />
  </fragment>

  <fragment
      android:id="@+id/FragmentChat"
      android:name="com.keygenqt.mylibrary.ui.chat.FragmentChat"
      tools:layout="@layout/common_fragment_list" />

  <fragment
      android:id="@+id/FragmentSettings"
      android:name="com.keygenqt.mylibrary.ui.settings.FragmentSettings"
      tools:layout="@layout/fragment_settings">

    <action
        android:id="@+id/action_FragmentSettings_to_FragmentAbout"
        app:destination="@id/FragmentAbout" />

    <action
        android:id="@+id/action_FragmentSettings_to_FragmentAppearance"
        app:destination="@id/FragmentAppearance" />

    <action
        android:id="@+id/action_FragmentSettings_to_FragmentEditProfile"
        app:destination="@id/FragmentEditProfile" />

    <action
        android:id="@+id/action_FragmentSettings_to_FragmentPassword"
        app:destination="@id/FragmentPassword" />

  </fragment>

  <fragment
      android:id="@+id/FragmentAbout"
      android:name="com.keygenqt.mylibrary.ui.settings.FragmentAbout"
      tools:layout="@layout/fragment_about">
    <action
        android:id="@+id/action_FragmentAbout_to_FragmentLicenses"
        app:destination="@id/FragmentLicenses" />
  </fragment>

  <fragment
      android:id="@+id/FragmentAppearance"
      android:name="com.keygenqt.mylibrary.ui.settings.FragmentAppearance"
      tools:layout="@layout/fragment_appearance" />

  <fragment
      android:id="@+id/FragmentEditProfile"
      android:name="com.keygenqt.mylibrary.ui.settings.FragmentEditProfile"
      tools:layout="@layout/fragment_edit_profile" />

  <fragment
      android:id="@+id/FragmentLicenses"
      android:name="com.keygenqt.mylibrary.ui.settings.FragmentLicenses"
      tools:layout="@layout/fragment_licenses" />

  <fragment
      android:id="@+id/FragmentPassword"
      android:name="com.keygenqt.mylibrary.ui.settings.FragmentPassword"
      tools:layout="@layout/fragment_password" />

</navigation>